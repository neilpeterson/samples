{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { },
    "variables": {
        // comment
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "name": "aks-cluster",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nestedtemplates/azuredeploy-aks.json"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "name": "aks-policies",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nestedtemplates/azuredeploy-aks-policies.json"
                }
            }
        }
    ]
}
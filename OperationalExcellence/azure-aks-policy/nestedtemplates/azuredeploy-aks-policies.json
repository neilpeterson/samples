{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { },
    "variables": {
       "policy-pod-labels": "/providers/Microsoft.Authorization/policyDefinitions/46592696-4c7b-4bf3-9e45-6c2763bdc0a6",
       "policy-allowed-images": "/providers/Microsoft.Authorization/policyDefinitions/febd0533-8e55-448f-b837-bd0e06f16469"
    },
    "resources": [
        {
            "apiVersion": "2019-09-01",
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "allowed-images",
            "properties": {
                "scope": "[subscriptionResourceId('Microsoft.Resources/resourceGroups', resourceGroup().name)]",
                "policyDefinitionId": "[variables('policy-allowed-images')]",
                "parameters": {
                    "allowedContainerImagesRegex": {
                        "value": "nginx"
                    },
                    "excludedNamespaces": {
                        "value": [
                            "kube-system",
                            "gatekeeper-system",
                            "cluster-baseline-settings"
                        ]
                    },
                    "effect": {
                        "value": "deny"
                    }
                }
            }
        },
        {
            "apiVersion": "2019-09-01",
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "pod-labels",
            "properties": {
                "scope": "[subscriptionResourceId('Microsoft.Resources/resourceGroups', resourceGroup().name)]",
                "policyDefinitionId": "[variables('policy-pod-labels')]",
                "parameters": {
                    "labelsList": {
                        "value": ["test"]
                    },
                    "excludedNamespaces": {
                        "value": [
                            "kube-system",
                            "gatekeeper-system",
                            "cluster-baseline-settings"
                        ]
                    },
                    "effect": {
                        "value": "audit"
                    }
                }
            }
        }
    ]
}